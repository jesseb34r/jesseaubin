---
interface Props {
  title: string;
}

import { Navigation } from "../components/Navigation";
import "../styles/IosevkaAile.css";
import "../styles/IosevkaTermCurly.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Jesse Aubin's corner of the internet" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-mauve-app text-mauve-normal max-w-2xl mx-auto my-margin">
    <Navigation />
    <main class="flex flex-col mx-margin">
      <slot />
    </main>
  </body>
</html>
